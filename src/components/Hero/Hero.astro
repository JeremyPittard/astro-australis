---
import Coffee from "../icons/coffee.astro";
import { PUBLIC_BMAC_URL } from "astro:env/client";

---

<section class="hero">
  <div class="inner">
    <h1 class="title">The 
      <span class="text-gradient">Southern Lights,</span> simplified.</h1>
      <!-- <p class="description">
        Glance at your phone, <b>Gaze</b> at the sky
      </p> -->
      <div class="btn-container">

        <a href="/dashboard" class="btn">Show Me The Light!</a>
        <a href={PUBLIC_BMAC_URL} class="btn secondary" target="_blank" rel="noopener noreferrer">
          <Coffee size={'27px'} />
          Caffeinate Me
        </a>
      </div>
  </div>
  <div class="aurora"></div>
</section>

<style>
.hero {
 --font-size: calc(var(--body-text-base-size) * 1.5);
  padding: var(--spacing-xxl);
  height: 90svh;
  position: relative;
  box-sizing: border-box;
  background-color: var(--background-color);
  overflow: hidden;
  display: flex;
  align-items: center;

  .inner {
    position: relative;
    z-index: 1;
    width: fit-content;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xxl);
    max-width: 90%;
    margin: 0 auto;
    
    h1 {
      --heading-text-size: 54px;
      text-shadow: 1px 1px 1px var(--background-color);
      
      .text-gradient {
        background-image: var(--gradient);
        background-clip: text;
        -webkit-text-stroke: 1px solid var(--background-color);
        -webkit-text-fill-color: transparent;
        text-shadow: none;
      }
      
      @media (min-width: 1024px) {
        --heading-text-size: 132px;
        
        
      }
    }
    
    .btn-container {
      display: flex;
      gap: var(--spacing-xxl);
    }
    
    @media ((min-width: 1024px)) {
      max-width: 1320px;
      padding: var(--spacing-lg);

    }
  }
  
  
  &::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -20px;
    width: 110%;
    height: 40px;
    z-index: 2;
    background: var(--background-color);
    filter: blur(10px);
  }
}


.aurora {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: hsla(213, 48%, 13%, 1);
  background-image: radial-gradient(
      at 80% 100%,
      hsla(312, 84%, 64%, 1) 0px,
      transparent 50%
    ),
    radial-gradient(at 0% 0%, hsla(131, 67%, 62%, 1) 0px, transparent 50%);

  filter: blur(100px);

  @media (prefers-reduced-motion: no-preference) {
    animation: auroraAnimation 7.5s ease-in-out infinite alternate;
  }
}

@keyframes auroraAnimation {
  0% {
    transform: scale(1) rotate(0);
  }
  100% {
    transform: scale(5) rotate(15deg);
  }
}

</style>